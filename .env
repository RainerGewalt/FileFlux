# Scaling and Identification
INSTANCE_ID=instance_1  # Unique ID for each container instance
CONTAINER_GROUP=uploader_group_1  # Grouping for related containers

# MQTT Configuration
MQTT_ADDRESS=mqtt://broker.example.com  # MQTT broker address
MQTT_PORT=1883  # MQTT broker port
MQTT_USERNAME=admin  # MQTT username
MQTT_PASSWORD=secret  # MQTT password
MQTT_ROOT_TOPIC=image_uploader/${INSTANCE_ID}  # Root topic for the uploader
MQTT_MAX_RETRIES=-1  # -1 for infinite retries, otherwise the max number of retries
MQTT_RETRY_INTERVAL_MS=5000  # Interval between retries in milliseconds

# SMB Default Configuration (overridable via MQTT)
SMB_TARGET_IP=192.168.1.10  # Default SMB target IP address
SMB_SHARE_NAME=default_share  # Default SMB share name
SMB_TARGET_FOLDER=/upload_folder_${INSTANCE_ID}  # Default target folder for uploads
SMB_CONNECTION_TIMEOUT_MS=10000  # SMB connection timeout in milliseconds

# File Handling
DEFAULT_FILE_SOURCE=/data/uploads  # Default source folder for files
RECURSIVE_UPLOAD=true  # If true, process files in subfolders as well
ALLOW_COMPRESSION=false  # Enable or disable file compression before upload
COMPRESSION_QUALITY=80  # Compression quality (0-100) if compression is enabled
MAX_FILE_UPLOAD_SIZE_MB=200  # Maximum allowed file size in megabytes
FILE_FILTERS=jpg,jpeg,png  # Allowed file extensions for upload
UPLOAD_STRATEGY=batch  # Upload strategy: batch (multiple files) or single (one file at a time)

# Logging and Status Reporting
LOG_LEVEL=info  # Log verbosity: debug, info, warn, error
LOG_TOPIC=$MQTT_ROOT_TOPIC/logs/${INSTANCE_ID}  # Topic for logs
STATUS_TOPIC=$MQTT_ROOT_TOPIC/status/${INSTANCE_ID}  # Topic for status updates
COMMAND_TOPIC=$MQTT_ROOT_TOPIC/commands/${INSTANCE_ID}  # Topic for receiving commands

# Health Checks
HEALTHCHECK_INTERVAL_MS=30000  # Interval for health checks in milliseconds
CONNECTION_TIMEOUT_MS=10000  # Timeout for network connections in milliseconds

# Debugging and Development
DEBUG_MODE=false  # Enable debug logs and detailed error messages
ENABLE_PROFILING=false  # Enable performance profiling
